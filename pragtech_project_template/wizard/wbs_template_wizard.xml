<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wbs_template_wizard_view" model="ir.ui.view">
        <field name="name">wbs.template.section.wizard.form</field>
        <field name="model">wbs.template.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="WBS Template Form">
                <sheet>
                    <div class="oe_title">
                        <group>
                            <group>
                                <field name="start_date" required="1"/>
                            </group>
                            <group>
                                <field name="end_date" required="1"/>
                            </group>


                        </group>
                        <group>
                            <group>
                                <group>
                                    <field name="project_ids" widget="many2many_checkboxes"/>
                                </group>

                            </group>
                            <group>
                                <group>

                                    <field name="sub_project_ids" widget="many2many_checkboxes"
                                           domain="[('project_id', 'in', project_ids)]"/>

                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="project_wbs_ids" widget="many2many_checkboxes" readonly="1"
                                           domain="[('sub_project', 'in', sub_project_ids),('project_id', 'in', project_ids),('is_wbs','=',1),('is_task','=',0)]"
                                    />
                                </group>

                            </group>
                        </group>

                    </div>


                    <footer>
                        <button string="Generate Models" name="generate_wbs_models" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>

            </form>
        </field>
    </record>

</odoo>






