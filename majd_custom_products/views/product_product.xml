<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_product_product_tree_view_inherit" model="ir.ui.view">
            <field name="name">product.product.tree.view.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="product_name" optional="show"/>
                    <field name="category_id" optional="show"/>
                    <field name="brand_id" optional="show"/>
                    <field name="product_description" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>