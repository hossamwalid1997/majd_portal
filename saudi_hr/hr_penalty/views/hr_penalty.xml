<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_penalty_tree" model="ir.ui.view">
        <field name="name">hr.penalty.tree</field>
        <field name="model">hr.penalty</field>
        <field name="arch" type="xml">
            <tree string="Penalty">
                <field name="name"/>
                <field name="first_time" widget="many2many_tags" />
                <field name="second_time" widget="many2many_tags" />
                <field name="third_time" widget="many2many_tags" />
                <field name="fourth_time" widget="many2many_tags" />
                <field name="fifth_time" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="view_hr_penalty_search" model="ir.ui.view">
        <field name="name">hr.penalty.search</field>
        <field name="model">hr.penalty</field>
        <field name="arch" type="xml">
            <search string="Penalty">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_hr_penalty_form" model="ir.ui.view">
        <field name="name">hr.penalty.form</field>
        <field name="model">hr.penalty</field>
        <field name="arch" type="xml">
            <form string="penalty">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <group>
                            <field name="penalty_type_id"/>
                            <field name="have_punishment"/>
                        </group>
                        <group>
                            <field name="penalty_code" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <separator string="Actions" attrs="{'invisible': [('have_punishment', '!=', True)]}" />
                    <group>
                        <group>
                            <field name="first_time" widget="many2many_tags" attrs="{'invisible': [('have_punishment', '!=', True)], 'required': [('have_punishment', '=', True)]}" />
                            <field name="third_time" widget="many2many_tags" attrs="{'invisible': [('have_punishment', '!=', True)]}" />
                            <field name="fifth_time" widget="many2many_tags" attrs="{'invisible': [('have_punishment', '!=', True)]}" />
                        </group>
                        <group>
                            <field name="second_time" widget="many2many_tags" attrs="{'invisible': [('have_punishment', '!=', True)]}" />
                            <field name="fourth_time" widget="many2many_tags" attrs="{'invisible': [('have_punishment', '!=', True)]}" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hr_penalty_form" model="ir.actions.act_window">
        <field name="name">Penalty</field>
        <field name="res_model">hr.penalty</field>
        <field name="view_mode">search,tree,form</field>
    </record>

    <menuitem id="menu_action_hr_penalty" action="action_hr_penalty_form" parent="hr_penalty.menu_configuration" sequence="1" groups="hr.group_hr_manager" />

</odoo>
